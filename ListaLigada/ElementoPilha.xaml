<UserControl x:Class="ListaLigada.ElementoPilha"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="115" Name="elPilha">
    <Grid>
        <Image Source="Imagens\Prato2.png" Opacity="0.6"/>
        <ContentPresenter TextElement.FontSize="14" TextElement.FontWeight="Bold"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Content="{Binding ElementName=elPilha, Path=Conteudo, Mode=TwoWay}"/>

    </Grid>
</UserControl>
